model Recipe {
  id            Int          @id @default(autoincrement())
  name          String
  ingredients   Ingredient[]
  author        User         @relation(fields: [authorId], references: [id])
  authorId      Int
  comments      Comments[]
}

model Ingredient {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]
  tags    Tag[]
}

model Tag {
  id      Int      @id @default(autoincrement())
  name    String
  ingredients Ingredient[]
}

model Comments {
  id      Int      @id @default(autoincrement())
  text    String
  author  User     @relation(fields: [authorId], references: [id])
  authorId Int
  recipe  Recipe   @relation(fields: [recipeId], references: [id])
  recipeId Int
}